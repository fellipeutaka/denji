{
  "name": "root",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "clean": "rimraf --glob \"apps/*/{node_modules,.turbo,dist,.next}\" \"node_modules\" \".turbo\"",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:doctor": "ultracite doctor",
    "type-check": "turbo run type-check",
    "cli": "bun --filter \"denji\"",
    "docs": "bun --filter \"docs\"",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.5",
    "lefthook": "^2.0.15",
    "rimraf": "^6.1.2",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3",
    "ultracite": "7.0.11"
  }
}
